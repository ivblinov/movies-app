<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".presentation.fragments.HomePageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/title_skillcinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_home_page"
            android:layout_marginTop="@dimen/margin_top_title_skillcinema"
            android:contentDescription="@string/skillcinema"
            android:src="@drawable/skillcinema_title" />

        <!-- premieres-->
        <com.examples.moviesapp.presentation.custom_layouts.MovieBlockLayout
            android:id="@+id/premieres_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_premieres_block"
            app:block_additional_text="@string/everyone"
            app:block_main_text="@string/premier" />

        <!-- popular-->
        <com.examples.moviesapp.presentation.custom_layouts.MovieBlockLayout
            android:id="@+id/popular_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_movie_block"
            app:block_additional_text="@string/everyone"
            app:block_main_text="@string/popular" />

        <!-- dynamic_selection-->
        <com.examples.moviesapp.presentation.custom_layouts.MovieBlockLayout
            android:id="@+id/dynamic_selection_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_movie_block"
            app:block_additional_text="@string/everyone"
            app:block_main_text="@string/dynamic_selection" />

        <!-- top250-->
        <com.examples.moviesapp.presentation.custom_layouts.MovieBlockLayout
            android:id="@+id/top_250_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_movie_block"
            app:block_additional_text="@string/everyone"
            app:block_main_text="@string/top_250" />

        <!-- dynamic_selection_2-->
        <com.examples.moviesapp.presentation.custom_layouts.MovieBlockLayout
            android:id="@+id/dynamic_selection_block_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_movie_block"
            app:block_additional_text="@string/everyone"
            app:block_main_text="@string/dynamic_selection" />

        <!-- tv_serials-->
        <com.examples.moviesapp.presentation.custom_layouts.MovieBlockLayout
            android:id="@+id/tv_serials_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_movie_block"
            android:layout_marginBottom="@dimen/margin_bottom_serials_block"
            app:block_additional_text="@string/everyone"
            app:block_main_text="@string/tv_serials" />

    </LinearLayout>
</ScrollView>