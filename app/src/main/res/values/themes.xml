<resources>
    <style name="Base.Theme.MoviesApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.MoviesApp" parent="Base.Theme.MoviesApp">
    </style>

    <style name="Theme.ProgressBar" parent="Base.Theme.MoviesApp">
        <item name="colorAccent">@color/blue_bottom_nav</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:fontFamily">@font/graphik_medium</item>
        <item name="android:textColor">@color/black_bottom_nav</item>
    </style>

    <style name="TextHomeTitle" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/graphik_semibold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="TextHomeAll" parent="BaseTextStyle">
        <item name="android:textColor">@color/blue_bottom_nav</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextHomeImageViewTitle" parent="BaseTextStyle">
        <item name="fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextHomeImageViewGenre" parent="TextHomeImageViewTitle">
        <item name="fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_home_genre</item>
    </style>

    <style name="cornerImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
</resources>