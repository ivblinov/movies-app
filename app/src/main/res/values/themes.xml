<resources>

    <style name="Base.Theme.MoviesApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.MoviesApp" parent="Base.Theme.MoviesApp">

    </style>

    <style name="Theme.ProgressBar" parent="Base.Theme.MoviesApp">
        <item name="colorAccent">@color/blue_bottom_nav</item>
    </style>

    <!--  TEXT  -->

    <style name="BaseTextStyle">
        <item name="android:fontFamily">@font/graphik_medium</item>
        <item name="android:textColor">@color/black_bottom_nav</item>
    </style>

    <style name="TextHomeTitle" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/graphik_semibold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="TextHomeAll" parent="BaseTextStyle">
        <item name="android:textColor">@color/blue_bottom_nav</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextHomeImageViewTitle" parent="BaseTextStyle">
        <item name="fontFamily">@font/graphik_regular</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextHomeImageViewGenre" parent="TextHomeImageViewTitle">
        <item name="fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_home_genre</item>
    </style>

    <style name="PosterText">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/poster_text_second</item>
    </style>

    <style name="FilmShortDescription">
        <item name="android:fontFamily">@font/graphik_semibold</item>
        <item name="android:textColor">@color/black_bottom_nav</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FilmDescription" parent="FilmShortDescription">
        <item name="android:fontFamily">@font/graphik_regular</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/graphik_semibold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/black_bottom_nav</item>
    </style>

    <style name="ArrowRight">
        <item name="android:fontFamily">@font/graphik_medium</item>
        <item name="android:textSize">@dimen/text_size_arrow</item>
        <item name="android:textColor">@color/blue_bottom_nav</item>
    </style>

    <style name="ActorName">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">@dimen/text_size_arrow</item>
        <item name="android:textColor">@color/black_bottom_nav</item>
    </style>

    <style name="CharacterName" parent="ActorName">
        <item name="android:textSize">@dimen/text_size_character_name</item>
        <item name="android:textColor">@color/gray_home_genre</item>
    </style>

    <!--  Image  -->

    <style name="cornerImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_marginStart">@dimen/margin_start_back_button</item>
        <item name="android:layout_marginTop">@dimen/margin_top_back_button</item>
        <item name="android:paddingStart">@dimen/padding_start_back_button</item>
        <item name="android:paddingTop">@dimen/padding_top_back_button</item>
        <item name="android:paddingEnd">@dimen/padding_end_back_button</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_back_button</item>
    </style>

</resources>